# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /ideas                      controllers.Ideas.list
GET     /ideas/add                  controllers.Ideas.add
POST    /ideas                      controllers.Ideas.save
GET     /ideas/:id/edit             controllers.Ideas.edit(id: Int)
POST    /ideas/:id                  controllers.Ideas.update(id: Int)
POST    /ideas/:id/delete           controllers.Ideas.delete(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
